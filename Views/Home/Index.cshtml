@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var employee in Model)
        {
            var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
            <div class="col-md-4 mb-4 d-flex">
                <div class="card w-100">
                    <div class="card-header">
                        <h5 class="card-title mb-0">@employee.Name</h5>
                    </div>

                    <div class="overflow-hidden" style="height: 200px;">
                        <img src="@photoPath"
                             asp-append-version="true"
                             class="card-img-top w-100 h-100 object-fit-cover" />
                    </div>

                    <div class="card-footer d-flex justify-content-center gap-2 flex-wrap">
                        <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                        <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                        <form asp-action="Delete" method="post" asp-route-id="@employee.Id" onsubmit="return confirm('Are you sure you want to delete this employee?');" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
